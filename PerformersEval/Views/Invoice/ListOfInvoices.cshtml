@using PerformersEval.Models;

@model IEnumerable<PerformersEval.Models.Invoice>

@{
    ViewBag.Title = "List of Invoices";
    
    if (TempData["STATUS"] != null)
    {   
        <h3 style="color:red">@TempData["STATUS"]</h3>
    }
}


<table class="noborder">
    <tr>
        <th style="text-align:left">
            @Html.DisplayNameFor(model => model.SSN)
        </th>
        <th  style="text-align:left">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(i => item.SSN)
            </td>
            <td>
                @Html.DisplayFor(i => item.Name)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id=item.InvoiceID })
            </td>
        </tr>
    }

</table>