@model PerformersEval.Models.Invoice
@{
    Layout = "";
}

<div style="font-size:1.25em">
<p style="text-align: center;">
<strong>ALAMEDA COUNTY LIBRARY<br /> INVOICE</strong>
</p>
<br />
    <table class="noborder"  style="font-size:1.15em">
    <colgroup>
        @for (var i = 0; i < 10; i++)
        {
            <col style="width:10%" />
        }
    </colgroup>

    <tr>
        <td colspan="1">FROM</td>
        <td style="text-align: right">Name:&nbsp;&nbsp;</td>
        <td colspan="8"><span>@Html.LabelForModel(Model.Name)</span></td>
    </tr>
    <tr>
        <td colspan="1"></td>
        <td style="text-align: right">Address:&nbsp;&nbsp;</td>
        @if (Model.Addr1 != null)
        {
            <td colspan="8"><span>@Html.LabelForModel(Model.Addr1)</span></td>
        }
        else
        { 
            <td colspan="8"><hr></td>
        }
    </tr>
    <tr>
        <td colspan="1"></td>
        <td style="text-align: right">City:&nbsp;&nbsp;</td>
        @if (Model.City != null)
        {
            <td colspan="4"><span>@Html.LabelForModel(Model.City)</span></td>
        }
        else
        { 
            <td colspan="4"><hr></td>
        }

        <td style="text-align: right">State:&nbsp;&nbsp;</td>
        @if (Model.State != null)
        {
            <td><span>@Html.LabelForModel(Model.State)</span></td>
        }
        else
        { 
            <td colspan="1"><hr></td>
        }

        <td style="text-align: right">Zip:&nbsp;&nbsp;</td>
        @if (Model.Zip != null)
        {
            <td><span>@Html.LabelForModel(Model.Zip)</span></td>
        }
        else
        { 
            <td colspan="1"><hr></td>
        }
    </tr>

    <tr><td><br /></td></tr>
    <tr>
        <td colspan="2" style="text-align: right">SSN or EIN:&nbsp;&nbsp;</td>
        <td colspan="7"><span>@Html.LabelForModel(Model.SSN)</span></td>
    </tr>

    <tr><td><br /></td></tr>
   <tr>
        <td colspan="5">I hereby request payment in the amount of&nbsp;&nbsp;</td>
       @if (Model.Payment != null)
       {
            <td colspan="5"><span>$@Html.LabelForModel(Model.Payment.ToString())</span></td>
       }
       else
       { 
            <td colspan="5"><hr></td>
       }
    </tr>
    <tr>
        <td colspan="2">in connection with&nbsp;&nbsp;</td>
        @if (Model.PaymentFor1 != null)
        {
            <td colspan="8"><span>@Html.LabelForModel(Model.PaymentFor1)</span></td>
        }
       else
       { 
            <td colspan="8"><hr></td>
       }
   </tr>
   <tr>
        <td colspan="2"></td>
        @if (Model.PaymentFor2 != null)
        {
            <td colspan="8"><span>@Html.LabelForModel(Model.PaymentFor2)</span></td>
        }
        else
        { 
            <td colspan="8"><hr></td>
        }
    </tr>

   <tr><td><br /></td></tr>
         

   <tr>
       <td colspan="2"></td>
       <td colspan="6"><hr></td>
       @if (Model.SignedDate != null)
       {
            <td colspan="2">@Html.LabelForModel(Model.SignedDate.Value.ToString("dd/MM/yyyy"))</td>
       }
       else
       { 
            <td colspan="2"><hr></td>
       }
   </tr>

   <tr>
        <td colspan="2"></td>
        <td colspan="6">SIGNATURE</td>
        <td colspan="2" style="text-align: left">DATE</td>
    </tr>
</table>

<br /><br />
<div style="width:80%; border-style:solid">
    &nbsp;&nbsp;PAY FROM ACCT.:
    <hr />
    &nbsp;&nbsp;(Branch / Program manager complete this line)
</div>

<br /><br />
    
<table style="border-collapse: collapse; border: none 0; font-size:inherit">
    <colgroup>
        @for (var i = 0; i < 10; i++)
        {
            <col style="width:10%;" />
        }
    </colgroup>

    <tr>
        <td colspan="3" style="text-align:left">EXAMINED AND APPROVED:</td>
    </tr>
    <tr><td><br /></td></tr>
    <tr>
        <td colspan="1"></td>
        <td colspan="8"><hr></td>
    </tr>   
    <tr>
        <td colspan="1"></td>
        <td colspan="6">BRANCH / PROGRAM MANAGER</td>
        <td colspan="1">DATE</td>
    </tr>  

    <tr><td><br /></td></tr>
    <tr>
        <td colspan="1"></td>
        <td colspan="8"><hr></td>
    </tr>  
    <tr>  
        <td colspan="1"></td>
        <td colspan="6">PRINCIPAL LIBRARIAN or DEPUTY COUNTY LIBRARIAN</td>
        <td colspan="1">DATE</td>
    </tr>  
</table>


</div>